# Backend environment
PORT=8080
DB_URL=jdbc:postgresql://localhost:5432/vault
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DRIVER=org.postgresql.Driver

# JWT (use at least 256-bit secret)
JWT_SECRET=please-change-this-and-keep-it-long-32b-minimum________________________________
JWT_ACCESS_TTL_MINUTES=60

# AES-256-GCM key (Base64 of 32 random bytes)
