# Optional PBKDF2 settings for future use
PBKDF2_SALT_BASE64=
PBKDF2_ITERATIONS=120000

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:5173

# Frontend environment
VITE_API_URL=http://localhost:8080

