# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/password_vault
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password
DATABASE_DRIVER=org.postgresql.Driver
HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# For MySQL (alternative)
# DATABASE_URL=jdbc:mysql://localhost:3306/password_vault
# DATABASE_USERNAME=root
# DATABASE_PASSWORD=password
# DATABASE_DRIVER=com.mysql.cj.jdbc.Driver
# HIBERNATE_DIALECT=org.hibernate.dialect.MySQL8Dialect

# JPA Configuration
DDL_AUTO=update
SHOW_SQL=false

# Server Configuration
PORT=8080

# Security Configuration
ENCRYPTION_SECRET_KEY=your-256-bit-secret-key-here-change-in-production-32chars
JWT_SECRET=your-jwt-secret-key-change-in-production-should-be-long-and-random
JWT_EXPIRATION=86400000

# Session Configuration
COOKIE_SECURE=false

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# Logging Configuration
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=INFO
SQL_LOG_LEVEL=WARN

# Production Environment Variables (set these in production)
# SPRING_PROFILES_ACTIVE=prod
# DATABASE_URL=your-production-database-url
# ENCRYPTION_SECRET_KEY=your-production-encryption-key-32-characters-long
# JWT_SECRET=your-production-jwt-secret-key
# CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com